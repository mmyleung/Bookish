@model List<AuthorViewModel>
@{
    ViewData["Title"] = "Authors";
}

<div class="text-center">
    <h1 class="display-4">Authors</h1>
    @foreach (AuthorViewModel author in Model)
        {
            <div class="author-card">
                <img src="@author.CoverPhotoUrl" alt="@author.Name">
                <h2><a asp-controller="Authors"
                        asp-action="Author">@author.Name</a></h2>
            </div>
        }
</div>